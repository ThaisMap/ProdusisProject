<UserControl x:Class="Produsis.CadastroFuncionarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Produsis"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="400"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <Grid Margin="0,10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Margin="40,0,0,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Cadastro de Funcionários</TextBlock>
                <Separator />
                <TextBlock HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Dados do Funcionário</TextBlock>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Grid.Row="0"
                                             Grid.Column="0"
                                             Width="24"
                                             Height="24"
                                             Margin="5"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Center"
                                             Kind="Account" 
                                             Foreground="{Binding ElementName=Nome, Path=BorderBrush}"/>
                    <TextBox Name="Nome"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="250"
                             materialDesign:HintAssist.Hint="Nome"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="5"/>
                    <materialDesign:PackIcon Grid.Row="1"
                                             Grid.Column="0"
                                             Width="24"
                                             Height="24"
                                             Margin="5"
                                             VerticalAlignment="Bottom"
                                             Kind="FileDocumentBox"
                                             HorizontalAlignment="Center"
                                             Foreground="{Binding ElementName=Matricula, Path=BorderBrush}"/>
                    <TextBox Name="Matricula"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="250"
                             materialDesign:HintAssist.Hint="Matricula"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="5"/>
                    <materialDesign:PackIcon Grid.Row="2"
                                             Grid.Column="0"
                                             Width="24"
                                             Height="24"
                                             Margin="5"
                                             VerticalAlignment="Bottom"
                                             Kind="Lightbulb"
                                             HorizontalAlignment="Center"
                                             Foreground="{Binding ElementName=Tipo, Path=BorderBrush}"/>
                    <ComboBox Name="Tipo"
                             Grid.Row="2"
                             Grid.Column="1"
                             Width="250"
                             materialDesign:HintAssist.Hint="Tipo"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="5"/>
                    <materialDesign:PackIcon Grid.Row="3"
                                             Grid.Column="0"
                                             Width="24"
                                             Height="24"
                                             Margin="5"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Center"
                                             Kind="HandPointingRight"
                                             Foreground="{Binding ElementName=Funcao, Path=BorderBrush}"/>
                    <ComboBox Name="Funcao"
                             Grid.Row="3"
                             Grid.Column="1"
                             Width="250"
                             materialDesign:HintAssist.Hint="Função"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="5"/>
                    <materialDesign:PackIcon Grid.Row="4"
                                             Grid.Column="0"
                                             Width="24"
                                             Height="24"
                                             Margin="5"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Center"
                                             Kind="Security"
                                             Foreground="{Binding ElementName=Senha, Path=BorderBrush}"/>
                    <PasswordBox Name="Senha"
                             Grid.Row="4"
                             Grid.Column="1"
                             Width="250"
                             materialDesign:HintAssist.Hint="Senha"
                             materialDesign:HintAssist.IsFloating="True"
                             Margin="5"/>
                    <TextBlock Grid.Row="5"
                                             Grid.Column="0"
                               Margin="5"
                               HorizontalAlignment="Center">Ativo:</TextBlock>
                    <ToggleButton Name="Ativo"
                             Grid.Row="5"
                             Grid.Column="1"
                             Width="auto"
                             Margin="5"
                                  HorizontalAlignment="Left"/>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="Limpar" Content="Limpar" Width="80" Margin="10" HorizontalAlignment="Right"  Style="{StaticResource MaterialDesignFlatButton}"></Button>
                    <Button Name="Salvar" Content="Salvar" Width="80" Margin="10" HorizontalAlignment="Right"  Style="{StaticResource MaterialDesignFlatButton}"></Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
