<UserControl x:Class="GUI.Conferencia"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GUI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             MinHeight="500"
             d:DesignHeight="400"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             TextElement.FontSize="16"
             IsTabStop="False"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Margin="0,10,0,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Margin="40,0,0,0"
                               Style="{StaticResource MaterialDesignHeadlineTextBlock}">Conferência</TextBlock>
                <Separator IsTabStop="False" />
                <Grid Grid.Row="1"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="10,20,0,5">
                    <StackPanel>
                        <TextBlock Text="Nova Conferência" Margin="0,0,350,0" />
                        <Grid Margin="10,5" Name="formSuperior" Height="180">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="60" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="5,10"
                                            Orientation="Horizontal">
                                <materialDesign:PackIcon Width="22"
                                                             Height="auto"
                                                             VerticalAlignment="Bottom"
                                                             Foreground="{Binding BorderBrush, ElementName=Documento}"
                                                             Kind="FileDocument" />
                                <TextBox x:Name="Documento"
                                         TabIndex="0"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="300"
                                        Margin="5,0,5,5"
                                        materialDesign:HintAssist.Hint="Conhecimento"
                                        materialDesign:HintAssist.IsFloating="True"
                                        PreviewTextInput="testarCaractere"
                                        Style="{StaticResource MaterialDesignTextBox}"
                                        LostFocus="normalizarDocumento" />
                            </StackPanel>
                            <StackPanel Grid.Row="0"
                                            Grid.RowSpan="3"
                                            CanVerticallyScroll="True"
                                            Grid.Column="1"
                                            Margin="10,-28,-10,10">
                                <TextBlock><Run Text="Funcionários Responsaveis:" /></TextBlock>
                                <ListBox x:Name="ListaDeFuncionarios"
                                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                             DataContext="Funcionarios" Height="185">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Chip Content="{Binding Nome}"
                                                                     Icon="{Binding Tag}"
                                                                     IsDeletable="True"
                                                                     DeleteClick="ChipEx_DeleteClick" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                            <StackPanel Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="5,0,5,0"
                                            Orientation="Horizontal">
                                <materialDesign:PackIcon Width="22"
                                                             Height="auto"
                                                             VerticalAlignment="Center"
                                                             Foreground="{Binding BorderBrush, ElementName=CBFuncionario}"
                                                             Kind="Account" />
                                <ComboBox x:Name="CBFuncionario"
                                          TabIndex="1"
                                              Width="240"
                                              Margin="10,0"
                                              IsEditable="True"
                                              materialDesign:HintAssist.Hint="Funcionário"
                                              materialDesign:HintAssist.IsFloating="True"
                                              SelectionChanged="CBFuncionario_SelectionChanged" />
                                <Button VerticalAlignment="Bottom"
                                        TabIndex="2"
                                            Click="Inserir_Click"
                                            Style="{StaticResource MaterialDesignFlatButton}" Content="Incluir" />
                            </StackPanel>
                            <Button x:Name= "Iniciar"
                                    TabIndex="3"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                         Margin="0,0,0,10" Width="71" Click="Iniciar_Click" Content="Iniciar" />
                        </Grid>
                        <Separator />
                        <ScrollViewer Height="250" CanContentScroll="True" IsTabStop="False" Name="Scrooler">
                        <Grid ScrollViewer.CanContentScroll="True" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Button Grid.Column="1"
                                       Grid.Row="0"
                                        x:Name="AtualizarDg"
                                        Height="25"
                                        Width="100"
                                        HorizontalAlignment="Right"
                                        Content="Atualizar" Margin="75,0,7,0"
                                        Style="{StaticResource MaterialDesignFlatButton}" Click="AtualizarDg_Click" />
                            <TextBlock Grid.Column="0"
                                       Grid.Row="0"
                                       x:Name="TextoExecucao"  Text="Tarefas em execução"
                                       HorizontalAlignment="Left" Margin="50,0,0,0" Width="200" />
                                <DataGrid
                                    ScrollViewer.CanContentScroll="True"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    x:Name="dgTarefas"
                                    Margin="40,5"
                                    HorizontalAlignment="Stretch"
                                    AutoGenerateColumns="False"
                                    VerticalAlignment="Stretch"
                                    ColumnWidth="*"
                                    IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="CT-e" Width="auto" Binding="{Binding documentoTarefa}" />
                                        <DataGridTextColumn Header="Funcionários" Binding="{Binding nomesFuncionarios}" Width="350" />
                                        <DataGridTextColumn Header="Hora Início" Binding="{Binding horaInicio}" />
                                        <DataGridTextColumn Header="SKU's" Binding="{Binding skus}" />
                                        <DataGridTextColumn Header="Volumes" Binding="{Binding volumes}" />
                                        <DataGridTextColumn Header="Tempo Gasto" Binding="{Binding tempoGasto}" />
                                        <DataGridTemplateColumn Header="Alterar">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  Content="Alterar" Click="Alterar_Click" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Finalizar Tarefa">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="Finalizar_Click" Content="Finalizar" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                        </Grid>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>