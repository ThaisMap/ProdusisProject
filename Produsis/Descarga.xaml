<UserControl x:Class="Produsis.Descarga"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Produsis"
             mc:Ignorable="d"  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="16"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             d:DesignHeight="400" d:DesignWidth="800" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Stretch" 
          HorizontalAlignment="Stretch">
        <ScrollViewer>
        <Grid Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <TextBlock Margin="40,0,0,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Descarga</TextBlock>
                <Separator></Separator>
                <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="60,20,0,5">
                    <StackPanel>
                        <TextBlock Text="Nova Descarga"></TextBlock>
                        <Grid Margin="40,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="4*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="5">
                                <materialDesign:PackIcon Kind="FileDocument"  
                                                         VerticalAlignment="Bottom" 
                                                         Height="auto" Width="22"
                                                         Foreground="{Binding ElementName=Documento, Path=BorderBrush}"/> 
                                <TextBox Name="Documento" Margin="10,0" materialDesign:HintAssist.Hint="Documento" materialDesign:HintAssist.IsFloating="True" Width="140"></TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="5">
                                <materialDesign:PackIcon Kind="Account"  
                                                         VerticalAlignment="Bottom" 
                                                         Height="auto" Width="22"
                                                         Foreground="{Binding ElementName=Funcionário, Path=BorderBrush}"/>
                                <ComboBox Name="Funcionário" Margin="10,0" 
                                          materialDesign:HintAssist.Hint="Funcionario"
                                          materialDesign:HintAssist.IsFloating="True"
                                          Width="240" />
                                <Button Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Bottom">Incluir</Button>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,5" Grid.Column="1" Grid.RowSpan="3" Grid.Row="0" Height="auto">
                                    <TextBlock>Funcionários Responsaveis:</TextBlock>
                                <WrapPanel Name="WPListaDeFuncionarios" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                                    <materialDesign:Chip Margin="3" IsDeletable="True" DeleteClick="ChipEx_DeleteClick" Name="ChipEx" Content="Irene Mendonça"></materialDesign:Chip>
                                    <materialDesign:Chip Margin="3" IsDeletable="True" Name="ChipEx2" Content="Fabiola Almeida Mendonça"></materialDesign:Chip>
                                </WrapPanel>
                            </StackPanel>
                                <Button VerticalAlignment="Bottom"
                                        HorizontalAlignment="Right"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Grid.Column="1"
                                        Grid.Row="2">Iniciar</Button>
                        </Grid>
                        <Separator></Separator>
                        <TextBlock Text="Tarefas em execução"></TextBlock>
                    <DataGrid Margin="40,5" Background="Gray"></DataGrid>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

