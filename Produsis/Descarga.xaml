<UserControl x:Class="Produsis.Descarga"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="using:Produsis.Funcionarios"
             xmlns:local="clr-namespace:Produsis"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="400"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1">
                    <TextBlock Margin="40,0,0,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Descarga</TextBlock>
                    <Separator />
                    <Grid Grid.Row="1"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="60,20,0,5">
                        <StackPanel>
                            <TextBlock Text="Nova Descarga" />
                            <Grid Margin="40,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Height="40"
                                            Margin="5"
                                            Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="22"
                                                             Height="auto"
                                                             VerticalAlignment="Bottom"
                                                             Foreground="{Binding ElementName=Documento,
                                                                                  Path=BorderBrush}"
                                                             Kind="FileDocument" />
                                    <TextBox Name="Documento"
                                             Width="140"
                                             Margin="10,0"
                                             materialDesign:HintAssist.Hint="Documento"
                                             materialDesign:HintAssist.IsFloating="True" />
                                </StackPanel>
                                <StackPanel Grid.Row="0"
                                            Grid.RowSpan="3"
                                            Grid.Column="1"
                                            Height="auto"
                                            Margin="0,10,0,5">
                                    <TextBlock>Funcionários Responsaveis:</TextBlock>
                                    <ListBox Name="ListaDeFuncionarios"
                                             materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                             DataContext="Funcionarios">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:Chip Content="{Binding Nome}"
                                                                     Icon="{Binding Tag}"
                                                                     IsDeletable="True" 
                                                                     />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                                <StackPanel Grid.Row="1"
                                            Grid.Column="0"
                                            Height="40"
                                            Margin="5"
                                            Orientation="Horizontal">
                                    <materialDesign:PackIcon Width="22"
                                                             Height="auto"
                                                             VerticalAlignment="Bottom"
                                                             Foreground="{Binding ElementName=CBFuncionario,
                                                                                  Path=BorderBrush}"
                                                             Kind="Account" />
                                    <ComboBox Name="CBFuncionario"
                                              Width="240"
                                              Margin="10,0"
                                              materialDesign:HintAssist.Hint="Funcionário"
                                              materialDesign:HintAssist.IsFloating="True"
                                              SelectionChanged="CBFuncionario_SelectionChanged">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Nome}" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button VerticalAlignment="Bottom"
                                            Click="Button_Click"
                                            Style="{StaticResource MaterialDesignFlatButton}">
                                        Incluir
                                    </Button>
                                </StackPanel>
                                <Button Grid.Row="3"
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource MaterialDesignFlatButton}">
                                    Iniciar
                                </Button>
                            </Grid>
                            <Separator />
                            <TextBlock Text="Tarefas em execução" />
                            <DataGrid Margin="40,5" Background="Gray" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

