<UserControl
    x:Class="GUI.Divergencia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GUI"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    d:DesignHeight="400"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="104" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.RowSpan="2" Grid.Column="0">
                    <TextBlock Margin="40,0,0,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Divergências</TextBlock>
                    <Separator />
                    <StackPanel Orientation="Horizontal">
                        <ComboBox
                            x:Name="cbTipoTarefa"
                            Width="200"
                            Margin="5, 15"
                            HorizontalAlignment="Left"
                            materialDesign:HintAssist.Hint="Tipo de Tarefa"
                            materialDesign:HintAssist.IsFloating="True"
                            IsEditable="True"
                            SelectedIndex="1">
                            <ComboBoxItem HorizontalAlignment="Left" Content="Descarga" />
                            <ComboBoxItem HorizontalAlignment="Left" Content="Conferência" />
                            <ComboBoxItem HorizontalAlignment="Left" Content="Movimentação de paletes" />
                            <ComboBoxItem HorizontalAlignment="Left" Content="Carregamento" />
                            <ComboBoxItem HorizontalAlignment="Left" Content="Empilhadeira" />

                        </ComboBox>
                        <materialDesign:PackIcon
                            Width="22"
                            Height="22"
                            Margin="20,0,0,20"
                            VerticalAlignment="Bottom"
                            Foreground="{Binding ElementName=Documento, Path=BorderBrush}"
                            Kind="FileDocument" />
                        <TextBox
                            Name="Documento"
                            Width="200"
                            Margin="5, 15"
                            materialDesign:HintAssist.Hint="Documento"
                            materialDesign:HintAssist.IsFloating="True"
                            PreviewTextInput="testarCaractere"
                            Style="{StaticResource MaterialDesignTextBox}" />
                        <Button
                            x:Name="btnConsultar"
                            Width="100"
                            Margin="15,0"
                            VerticalAlignment="Center"
                            Click="btnConsultar_Click"
                            Content="Consultar" />
                        <Button
                            x:Name="btnSalvar"
                            Width="100"
                            Margin="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="btnSalvar_Click"
                            Content="Salvar" />


                    </StackPanel>
                    
              
                    <DataGrid
                        Name="dgDivergencias"
                        Margin="10,0,0,10"
                        HorizontalAlignment="Left"
                        AutoGenerateColumns="False"
                        ColumnWidth="auto"
                        IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding cte}" Header="Documento" />
                            <DataGridTextColumn Binding="{Binding fornecedor}" Header="Fornecedor" />
                            <DataGridTextColumn Binding="{Binding nomesFuncionarios}" Header="Funcionários" />
                            <DataGridTemplateColumn Header="Código Faltas">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=codFalta, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Qtde">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=qtdFalta, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Código Sobra">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=codSobra, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Qtde">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=qtdSobra, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Código Avaria">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=codAvaria, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Qtde">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Width="50" Text="{Binding Path=qtdAvaria, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
