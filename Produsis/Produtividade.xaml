<UserControl x:Class="GUI.Produtividade"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:GUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="420"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:Produtividade}">
    <StackPanel Orientation="Vertical">
        <Grid Name="cabecalho" Height="90" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="4" Margin="40,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Indicador de produtividade</TextBlock>
            <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Height="20" Margin="0,10,0,24" Width="41">Início:</TextBlock>
            <DatePicker x:Name="dataInicio"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Margin="5,0,0,20"
                    VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                    Language="pt-br" Height="28" />
            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" 
                       Height="20" Width="29" Margin="0,10,0,22">Fim:</TextBlock>
            <DatePicker x:Name="dataFim"
                    Grid.Row="1"
                    Grid.Column="3"
                    Width="150"
                    Margin="5,0,0,20"
                    VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                    Language="pt-br" Height="28" />
            <Button x:Name="btGerar" Content="Gerar" Grid.Column="4" HorizontalAlignment="Left" 
                    Grid.Row="1" VerticalAlignment="Center" Width="75" Click="geraRelatorioTabela" 
                    Margin="0,0,0,16"/>

            <!--
        <lvc:CartesianChart Series="{Binding Colecao}"  LegendLocation="Bottom" Grid.Row="1" Height="300">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Funcionário" Labels="{Binding Rotulos}"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Produtividade" LabelFormatter="{Binding Formatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>-->
        </Grid>

        <DataGrid Name="dgRanking" Height="220" HorizontalAlignment="Center" AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding nomesFuncionarios}" Header="Funcionário " />
                <DataGridTextColumn Binding="{Binding mediaPorHora}" Header="Média no período" />
                <DataGridTextColumn Binding="{Binding observacoes}" Header="Observações" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>

</UserControl>
