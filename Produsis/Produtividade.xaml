<UserControl x:Class="GUI.Produtividade"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:GUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="420"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             TextElement.FontSize="16"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:Produtividade}">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="cabecalho" Height="100" VerticalAlignment="Top" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="150*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="56" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="4" Margin="40,0" Style="{StaticResource MaterialDesignHeadlineTextBlock}">Indicador de produtividade</TextBlock>
            <Separator Grid.ColumnSpan="5"/>
            <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="20" Margin="0,11,0,13" Width="41">Início:</TextBlock>
            <DatePicker x:Name="dataInicio"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Margin="5,7,0,9"
                    VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                    Language="pt-br" Height="28" />
            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Height="20" Width="29">Fim:</TextBlock>
            <DatePicker x:Name="dataFim"
                    Grid.Row="1"
                    Grid.Column="3"
                    Width="150"
                    Margin="5,7,0,9"
                    VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                    Language="pt-br" Height="28" />
            <Button x:Name="btGerar" Content="Gerar" Grid.Column="4" HorizontalAlignment="Left"  Grid.Row="1" VerticalAlignment="Center" Width="75" Click="geraRelatorio"/>
        </Grid>

        <lvc:CartesianChart Series="{Binding Colecao}"  LegendLocation="Bottom" Grid.Row="1" Height="300">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Funcionário" Labels="{Binding Rotulos}"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Produtividade" LabelFormatter="{Binding Formatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisY>

            <!--  lvc:LineSeries Stroke="Red" Fill="Red"/-->
        </lvc:CartesianChart>
    </Grid>
</UserControl>
