<UserControl
    x:Class="Produsis.Relatorios"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Produsis"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
        <StackPanel CanHorizontallyScroll="True" CanVerticallyScroll="True">
            <TextBlock
                Margin="40,0,0,0"
                HorizontalAlignment="Left"
                Style="{StaticResource MaterialDesignHeadlineTextBlock}">
                Filtros
            </TextBlock>

            <Grid Height="auto" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Tipo de tarefa:
                </TextBlock>
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="160"
                    Margin="5,10"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Documento:
                </TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="160"
                    Margin="5,10"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="4"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Volumes:
                </TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="5"
                    Width="40"
                    Margin="5,10"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="6"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Até:
                </TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="7"
                    Width="40"
                    Margin="5,10"
                    VerticalAlignment="Center" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Data de Início:
                </TextBlock>
                <DatePicker
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="160"
                    Margin="5,10"
                    VerticalAlignment="Center" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5,10"
                    VerticalAlignment="Center">
                    Hora de Início:
                </TextBlock>
                <materialDesign:TimePicker
                    Grid.Row="1"
                    Grid.Column="3"
                    Width="160"
                    Margin="5,10"
                    VerticalAlignment="Center"
                    Localization.Attributes="pt-br"
                    />
                

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
